{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "env": {
    "MONGODB_URI": "@mongodb-uri",
    "NEXTAUTH_SECRET": "@nextauth-secret",
    "NEXTAUTH_URL": "https://your-domain.vercel.app",
    "GITHUB_ID": "@github-id",
    "GITHUB_SECRET": "@github-secret",
    "GOOGLE_ID": "@google-id",
    "GOOGLE_SECRET": "@google-secret"
  }
} 